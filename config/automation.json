{
    "time_checks": {
      "cleanup": {
        "handler": "src.automation.routines.cleanup.CleanupRoutine",
        "interval": 3600
      },
      "donate": {
        "handler": "src.automation.routines.allianceDonate.AllianceDonateRoutine",
        "interval": 22000
      },
      "help": {
        "handler": "src.automation.routines.help.HelpRoutine",
        "interval": 15
      },      
      "rally": {
        "handler": "src.automation.routines.rally.RallyRoutine",
        "interval": 5,
        "options": {
          "only_golden": true
        }
      },
      "dig": {
        "handler": "src.automation.routines.checkForDigs.CheckForDigsRoutine",
        "interval": 5,
        "options": {
          "auto_claim": true,
          "wait_for_dig": 420,
          "wait_for_dig_interval": 0.25,
          "chat_search_swipes": 5
        }
      },
      "secretary": {
        "handler": "src.automation.routines.secretary.SecretaryRoutine",
        "interval": null
      },
      "mapExchange": {
        "handler": "src.automation.routines.mapExchange.MapExchangeRoutine",
        "interval": null
      },
      "gifts": {
        "handler": "src.automation.routines.allianceGifts.AllianceGiftsRoutine",
        "interval": 5000
      },
      "collect_resources": {
        "handler": "src.automation.routines.collectResources.CollectResourcesRoutine",
        "interval": 10000
      }
    },
    "scheduled_events": {
      "weekly_reset": {
        "handler": "src.automation.routines.weeklyReset.WeeklyResetRoutine",
        "schedule": {
          "day": null,
          "time": "04:50"
        }
      },
      "apply_secretary_development": {
        "handler": "src.automation.routines.scheduled.applyForSecretary.ApplyForSecretary",
        "schedule": {
          "day": "tuesday",
          "time": "5:10"
        },
        "options": {
          "position": "development"
        }
      },
      "apply_secretary_science": {
        "handler": "src.automation.routines.scheduled.applyForSecretary.ApplyForSecretary",
        "schedule": {
          "day": "wednesday",
          "time": "5:45"
        },
        "options": {
          "position": "science"
        }
      },
      "apply_secretary_interior": {
        "handler": "src.automation.routines.scheduled.applyForSecretary.ApplyForSecretary",
        "schedule": {
          "day": "tuesday",
          "time": "15:35"
        },
        "options": {
          "position": "interior"
        }
      }
    }
  } 